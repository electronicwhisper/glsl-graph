// ============================================================================
// Mixins
// ============================================================================

inline(va)
  display inline-block
  vertical-align va

shadow(size, opacity)
  box-shadow 0px size 2*size rgba(0, 0, 0, opacity)


// ============================================================================
// Generic
// ============================================================================

html, body
  margin 0

[contenteditable]:active, [contenteditable]:focus, button:active, button:focus
  outline none

[contenteditable]
  cursor text

body
  font-family "Lucida Sans Unicode", "Lucida Grande", sans-serif
  font-size 12px
  cursor default
  overflow hidden
  color #333


// ============================================================================
// Layout
// ============================================================================

.Code
  position absolute
  top 0
  right 0
  width 600px
  bottom 0

.Shader
  position absolute
  top 0
  right 600px
  left 0
  bottom 0
  canvas
    position absolute
    left 0
    top 0
    width 100%
    height 100%
